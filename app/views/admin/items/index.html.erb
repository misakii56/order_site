<div class="container">
  <div class="row">
    <div class="col-md-10">
  <h4>商品一覧</h4>
  </div>
  <div class="col-md-2">
  <div><%= link_to "+", new_admin_item_path, class:"btn btn-light rounded-circle" %></div>
  </div>
<table class="table">
  <thead class="thead-light">
    <tr>
        <th scope="col">商品ID</th>
        <th scope="col">商品名</th>
        <th scope="col">税抜価格</th>
        <th scope="col">ジャンル</th>
        <th scope="col">ステータス</th>
    </tr>
  </thead>
  <tbody>
      <% @items.each do |item| %>
      <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><% if item.is_active %>
          <span style="color: green;">販売中</span>
          <% else %>
           <span style="color: #808080;">販売停止中</span>
          <% end %></td>
      </tr>
      <% end %>
  </tbody>
  </table>
</div>
  <div class="d-flex justify-content-center">
  <%= paginate @items %>
 </div>