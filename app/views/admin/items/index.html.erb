<h4>商品一覧</h4>

<table class="table">
  <thead class="thead-light">
    <tr>
        <th scope="col">商品ID</th>
        <th scope="col">商品名</th>
        <th scope="col">税抜価格</th>
        <th scope="col">ジャンル</th>
        <th scope="col">ステータス</th>
    </tr>
  </thead>
  <tbody>
      <% @items.each do |item| %>
      <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td><%= @genres.name %></td>
          <td><%= item.is_active ? '販売中' : '販売停止中' %></td>
      </tr>
      <% end %>
  </tbody>
  </table>