<div class="container">
  <div class="row">
    <div class="col-lg-6">
    <div class="badge badge-light">ジャンル一覧・追加</div>
<div class="d-flex justify-content-around">
<p>ジャンル名</p>
<%= form_with model: @genre,url:admin_genres_path do |f| %>
<%= f.text_field :name %>
<%= f.submit '新規登録', class:"btn btn-success" %>
</div>
<% end %>
<table class="table">
  <thead class="thead-light">
    <tr>
        <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
      <% @genres.each do |genre| %>
      <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
      </tr>
      <% end %>
  </tbody>
  </table>
</div>
</div>
</div>
