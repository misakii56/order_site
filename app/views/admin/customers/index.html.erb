<div class="container">
  <div class="row">
      <h3>会員一覧</h3>
<table class="table">
  <thead class="thead-light">
    <tr>
        <th scope="col">会員ID</th>
        <th scope="col">氏名</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">ステータス</th>
    </tr>
    </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
                <td><%= customer.id %></td>
                <td><%= link_to admin_customer_path(customer.id) do %><%= customer.last_name %><%= customer.first_name %>
                <% end %></td>

                <td><%= customer.email %></td>
                <td><% if customer.is_deleted %>
                 <span style="color: #808080;">退会済</span>
                <% else %>
                 <span style="color: green;">有効</span>
                <% end %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
    </div>
    </div>
 <div class="d-flex justify-content-center">
  <%= paginate @customers %>
 </div>