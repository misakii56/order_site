<div class="container">
  <div class="row">
      <h3>会員一覧</h3>
<table class="table">
  <thead class="thead-light">
    <tr>
        <th scope="col">会員ID</th>
        <th scope="col">氏名</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">ステータス</th>
    </tr>
    </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
                <td><%= customer.id %></td>
                <td><%= link_to customer.last_name, admin_customer_path(customer.id) %></td>

                <td><%= customer.email %></td>
                <td><%= customer.is_deleted ? '有効' : '退会' %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
    </div>
    </div>
 <div class="d-flex justify-content-center">
  <%= paginate @customers %>
 </div>