<div class="container">
  <div class="row">
    <div class="col-7">

    <% if @item.image.attached? %>
    <%= image_tag @item.image, size: "250x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "250x200" %>
  <% end %>
  </div>
  <div class="col-5">
  <!--customerの商品一覧に変更-->
<h4><%= @item.name %></h4>
<h5><%= @item.introduction %></h5>

<h4>¥<%= @item.with_tax_price %>(税込)</h4>
<%= form_with model: @cart_item, url:public_cart_items_path do |f| %>
<%= f.hidden_field :item_id, :value => @item.id %>
<%= f.select :amount, *[1..10] %>
<%= f.submit "カートに入れる",  class:"btn btn-success" %>
</div>
<% end %>