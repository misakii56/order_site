<h4>注文情報確認</h4>
<div class="container">
    <div class="row">
        <div class="col-9">
<table class="table">
  <thead class="thead-light">
    <tr>
        <th scope="col"></th>
        <th scope="col">商品名</th>
        <th scope="col">単価(税込)</th>
        <th scope="col">数量</th>
        <th scope="col">小計</th>
    </tr>
  </thead>
  <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
          <td><% if cart_item.item.image.attached? %>
                <%= image_tag cart_item.item.image, size: "70x50" %>
                <% else %>
                <%= image_tag 'no_image', size: "70x50" %>
                <% end %>
        </td>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price%></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal%></td>
           <% @total +=  cart_item.subtotal %>
           
      </tr>
      <% end %>
  </tbody>
  </table>
  
  </div>
<div class="col-3">

    <table class="table">
  <thead class="thead-light">
    <tr><th>送料</th><td><%= @order.shopping_cost %></td></tr>
    <tr><th>商品合計</th><td></td></tr>
    <tr><th>請求金額</th><td></td></tr>
    </thead>
  </table>
  </div>
  </div>
 <div class="row">
        <div class="col-3">
<h5>支払方法</h5>
<h5>お届け先</h5>
</div>
        <div class="col-9">
<p><%= @order.payment_method_i18n %></p>
<p>〒<%= @order.postal_code %> <%= @order.address %><%= @order.name %></p>
</div>
</div>


