<div class="container container-m">
  <div class="row">
    <div class="col">
<h4>注文履歴一覧</h4>
<table class="table">
  <thead class="thead-light">
    <tr>
        <th scope="col">注文日</th>
        <th scope="col">配送先</th>
        <th scope="col">注文商品</th>
        <th scope="col">支払金額</th>
        <th scope="col">注文詳細</th>
    </tr>
  </thead>
  <tbody>
      <% @order_products.each do |order_product| %>
      <tr>
        <td><%= order_product.created_at.strftime("%Y/%m/%d") %></td>
          <td>〒<%= order_product.postal_code %><div><%= order_product.address %></div><%= order_product.name %></td>
          <td><% order_product.order_products.each do |order_item| %>
          <p><%= order_item.item.name %></p>
          <% end %></td>
          <td><%= order_product.total_payment %>円</td>
          <td><%= link_to "表示する", public_order_path(order_product.id), class:"btn btn-primary" %></td>
      </tr>
      <% end %>
  </tbody>
  </table>