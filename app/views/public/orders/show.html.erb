
<div class="container">
  <h4>注文履歴詳細</h4>
    <div class="row">
        <div class="col-7">

<p>注文情報</p>
<table class="table">
  <thead class="thead-light">
    <tr><th>注文日</th><td><%= @order_product.created_at.strftime("%Y/%m/%d") %></td></tr>
    <tr><th>配送先</th><td>〒<%= @order_product.postal_code %><div><%= @order_product.address %></div><%= @order_product.name %></td></tr>
    <tr><th>支払方法</th><td><%= @order_product.payment_method_i18n %></td></tr>
    </thead>
  </table>
  </div>

  <div class="col-5">
  <p>請求情報</p>
  <table class="table">
  <thead class="thead-light">
    <tr><th>商品合計</th><td><%= @order_products.sum(&:subtotal)%></td></tr>
    <tr><th>配送料</th><td><%= @order_product.shopping_cost %></td></tr>
    <tr><th>ご請求額</th><td><%= @order_product.total_payment %></td></tr>
    </thead>
    </table>
    </div>
    </div>
    <p>注文内容</p>
  <div class="row">
    <div class="col-8">
 <table class="table">
  <thead class="thead-light">
    <tr>
        <th scope="col">商品</th>
        <th scope="col">単価(税込)</th>
        <th scope="col">個数</th>
        <th scope="col">小計</th>
    </tr>
  </thead>
  <tbody>
      <% @order_product.order_products.each do |order_item| %>
      <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.price %></td>
          <td><%= order_item.amount %></td>
          <td><%= order_item.subtotal %></td>
      </tr>
      <% end %>
  </tbody>
  </table>
  </div>
  </div>
  </div>